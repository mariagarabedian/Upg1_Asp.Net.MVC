@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";

    var roles = (List<IdentityRole>)ViewData["roles"];
}
<div class="container align-content-center">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <hr class="mb-3 " />


    <div class="col ">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-primary">Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Role">Role</label>
                <select asp-for="Input.Role" class="form-control" asp-items='new SelectList(roles, "Name")'>
                    <option value="null" disabled selected hidden>Select role ...</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" id="firstname" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" id="lastname" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" id="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" id="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" id="password1" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary pl-5 pr-5" id="button" disabled="disabled">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
